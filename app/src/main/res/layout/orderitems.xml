<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/second"
                android:textColor="@color/pink"
                android:textSize="@dimen/about"/>
            <View
                android:layout_width="135dp"
                android:layout_height="2dp"
                android:background="@color/pink"
                ></View>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal"
            android:weightSum="4">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Items"
                android:layout_weight="1"
                android:textSize="@dimen/about1"
                android:textColor="@color/pink"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate"
                android:layout_marginStart="80dp"
                android:layout_weight="1"
                android:textSize="@dimen/about1"
                android:textColor="@color/pink"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Value"
                android:layout_weight="1"
                android:layout_marginStart="50dp"
                android:textSize="@dimen/about1"
                android:textColor="@color/pink"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Qty"
                android:layout_weight="1"
                android:layout_marginStart="50dp"
                android:textSize="@dimen/about1"
                android:textColor="@color/pink"
                />

        </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="9"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:orientation="horizontal"
            android:weightSum="4">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Popcorn"
                android:textColor="@color/ColorName1"
                android:id="@+id/popcorn"
                android:layout_weight="1"


                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="70"
                android:id="@+id/popcornrate"
                android:textColor="@color/ColorName1"
                android:layout_marginStart="100dp"
                android:layout_weight="1"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#0004ff"
                android:layout_marginStart="70dp"
                android:id="@+id/popcornvalue"
                android:layout_weight="1"

                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginRight="30dp"
                android:id="@+id/spinner1"
                android:layout_weight="1"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:orientation="horizontal"
            android:weightSum="4">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Popcorn Caramel"
                android:textColor="@color/ColorName1"
                android:id="@+id/popcara"
                android:layout_weight="1"


                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="110"
                android:textColor="@color/ColorName1"
                android:id="@+id/caramelrate"
                android:layout_marginStart="100dp"
                android:layout_weight="1"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/caramelvalue"
                android:text="0"
                android:textColor="#0004ff"
                android:layout_marginStart="70dp"
                android:layout_weight="1"

                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginRight="30dp"
                android:id="@+id/qty2spinner"
                android:layout_weight="1"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:orientation="horizontal"
            android:weightSum="4">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Popcorn Large"
                android:textColor="@color/ColorName1"
                android:id="@+id/popcornlarge"
                android:layout_weight="1"


                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="120"
                android:id="@+id/poplargerate"
                android:textColor="@color/ColorName1"
                android:layout_marginStart="100dp"
                android:layout_weight="1"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/poplargevalue"
                android:textColor="#0004ff"
                android:text="0"
                android:layout_marginStart="70dp"
                android:layout_weight="1"

                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginStart="40dp"
                android:id="@+id/poplargespinner"
                android:layout_weight="1"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Veg Puff"
                android:textColor="@color/ColorName1"
                android:id="@+id/vegpuff"
                android:layout_weight="1"


                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="50"
                android:id="@+id/vegpuffrate"
                android:layout_marginStart="100dp"
                android:textColor="@color/ColorName1"
                android:layout_weight="1"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/vegpuffvalue"
                android:textColor="#0004ff"
                android:text="0"
                android:layout_marginStart="70dp"
                android:layout_weight="1"

                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginStart="40dp"
                android:id="@+id/vegpuffspinner"
                android:layout_weight="1"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="20dp"
                android:textColor="#0004ff"
                android:id="@+id/total"
                android:layout_weight="1"
                ></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/totalValue"
                android:text="0"
                android:textSize="20dp"
                android:textColor="#0004ff"
                android:layout_marginStart="70dp"
                android:layout_weight="1"

                />

        </LinearLayout>
    </LinearLayout>

</ScrollView>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/order1"
        android:text="Confirm Order"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:background="@color/pink"
        android:layout_alignParentStart="true"/>

</RelativeLayout>